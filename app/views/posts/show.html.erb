<h1><%= @post.title %></h1>

<% if (@post.summary == nil) %>
  <%= link_to "Create a Post Summary", new_topic_post_summary_path(@topic, @post, Summary.new) %>
<% else %>
  <h4><%= @post.summary.description %></h4>
<% end %>


<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>