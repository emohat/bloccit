<h1>New Summary</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidlines for Summaries:<p>
      <ul>
      <li>This should actually be a summary of your post.</li>
      <li>It should not be a comment.</li>
      <li>Make your English teacher proud.</li>
    </ul>
  </div>

<%= form_for [@topic, @post, @summary] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: "Enter post summary" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
